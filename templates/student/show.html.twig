{% extends 'base.html.twig' %}

{% block title %}Étudiant{% endblock %}

{% block body %}
    <h1>Étudiant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>N° Étudiant</th>
                <td>{{ student.numEtud }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_index') }}">Retour à la liste</a>

    <a href="{{ path('app_student_edit', {'id': student.id}) }}">Modifier</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
